<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="icon" href="/Images/image.png" type="image/png">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/admin-layout.css">
    <link rel="stylesheet" href="/css/admin-dashboard.css">
    <link rel="stylesheet" href="/css/admin-messages.css">
</head>
<body>
    <div class="admin-layout">
        <button class="mobile-menu-btn" onclick="toggleSidebar()">
            <i class="fas fa-bars"></i>
        </button>
        <%- include('partials/sidebar', { activePage: 'dashboard', username: adminUsername || 'Admin' }) %>
        <main class="admin-main">
            <div class="page-header">
                <div class="logo-container">
                    <img src="/Images/image.png" alt="Rutero Model School Logo" class="logo">
                    <span class="brand-line">Rutero Model School- Admin Dashboard</span>
                </div>
                <p class="page-subtitle">Welcome back, <%= adminUsername %>!</p>
            </div>
            
            <div class="message-container" id="messageContainer"></div>
            
            <% if (typeof success !== 'undefined' && success) { %>
                <script>document.addEventListener('DOMContentLoaded', () => showMessage(`<%= success %>`, 'success'));</script>
            <% } %>

            <div class="dashboard-grid">
                <div class="admin-card">
                    <div class="card-header">
                        <h3 class="card-title">News Management</h3>
                    </div>
                    <p style="color: var(--text-light); margin-bottom: 1.5rem;">Create, edit, and manage news articles</p>
                    <a href="/admin/news-update" class="btn btn-primary">Manage News</a>
                </div>

                <div class="admin-card">
                    <div class="card-header">
                        <h3 class="card-title">Announcements</h3>
                    </div>
                    <p style="color: var(--text-light); margin-bottom: 1.5rem;">Post important school announcements</p>
                    <a href="/admin/announcements" class="btn btn-primary">Manage Announcements</a>
                </div>

                <div class="admin-card">
                    <div class="card-header">
                        <h3 class="card-title">Banner</h3>
                    </div>
                    <p style="color: var(--text-light); margin-bottom: 1.5rem;">Update home page banner message</p>
                    <a href="/admin/announcements" class="btn btn-primary">Manage Banner</a>
                </div>

                <div class="admin-card">
                    <div class="card-header">
                        <h3 class="card-title">Gallery</h3>
                    </div>
                    <p style="color: var(--text-light); margin-bottom: 1.5rem;">Upload and organize school photos</p>
                    <a href="/admin/gallery" class="btn btn-primary">Manage Gallery</a>
                </div>

                <div class="admin-card">
                    <div class="card-header">
                        <h3 class="card-title">Proprietor Message</h3>
                    </div>
                    <p style="color: var(--text-light); margin-bottom: 1.5rem;">Update the proprietor's message</p>
                    <a href="/admin/proprietor" class="btn btn-primary">Update Message</a>
                </div>

                <div class="admin-card">
                    <div class="card-header">
                        <h3 class="card-title">Admissions</h3>
                    </div>
                    <p style="color: var(--text-light); margin-bottom: 1.5rem;">Manage submitted Admission forms</p>
                    <a href="/admin/admissions" class="btn btn-primary">Manage Admissions</a>
                </div>


                <div class="admin-card">
                    <div class="card-header">
                        <h3 class="card-title">Contact Emails</h3>
                    </div>
                    <p style="color: var(--text-light); margin-bottom: 1.5rem;">View and respond to contact emails</p>
                    <a href="/admin/emails" class="btn btn-primary">Manage Emails</a>
                </div>
            </div>
        </main>
    </div>
    
    <script src="/js/admin-sidebar.js"></script>
    <script src="/js/admin-messages.js"></script>
    <script src="/js/admin-loading.js"></script>
</body>
</html>