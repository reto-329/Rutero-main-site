<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="/css/style.css">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;770;800&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<header class="header" id="header">
    <div class="header-container">
        <a href="/" class="logo-container">
            <img src="/Images/image.png" alt="Rutero Model School Logo" class="logo">
            <span class="brand-line">Rutero Model School</span>
        </a>

        <nav class="nav" id="nav-menu">
            <div class="nav-header">
                <span class="nav-title">Menu</span>
                <button class="nav-close" id="nav-close">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <ul class="nav-list">
                <li class="nav-item">
                    <a href="/" class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'home' ? 'active' : '' %>">
                        <i class="fas fa-home nav-icon"></i>
                        <span>HOME</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/about" class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'about' ? 'active' : '' %>">
                        <i class="fas fa-users nav-icon"></i>
                        <span>ABOUT US</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admission" class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'admission' ? 'active' : '' %>">
                        <i class="fas fa-graduation-cap nav-icon"></i>
                        <span>ADMISSION</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/gallery" class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'gallery' ? 'active' : '' %>">
                        <i class="fas fa-images nav-icon"></i>
                        <span>GALLERY</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/contact" class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'contact' ? 'active' : '' %>">
                        <i class="fas fa-envelope nav-icon"></i>
                        <span>CONTACT US</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/login" class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'login' ? 'active' : '' %>">
                        <i class="fas fa-user-circle nav-icon"></i>
                        <span>LOGIN</span>
                    </a>
                </li>
            </ul>
        </nav>

        <div class="header-toggle" id="header-toggle">
            <i class="fas fa-bars"></i>
        </div>
    </div>
</header>
<script src="/js/header-script.js"></script>