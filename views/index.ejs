                    <% } %>

                    <div class="quick-announcements" id="quick-announcements">
                        <% if (latestAnnouncements && latestAnnouncements.length > 0) {%>
                            <% latestAnnouncements.forEach(function(announcement) {%>
                                <div class="quick-announcement">
                                    <div class="announcement-date">
                                        <span class="day"><%= new Date(announcement.date).getDate() %></span>
                                        <span class="month"><%= new Date(announcement.date).toLocaleDateString('en-US', { month: 'short' }) %></span>
                                    </div>
                                    <div class="announcement-text">
                                        <h4><%= announcement.title %></h4>
                                        <p><%= announcement.description %></p>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else {%>
