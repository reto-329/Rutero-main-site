                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="news-section">
        <div class="container">
            <div class="news-grid">
                <div class="news-column">
                    <div class="section-title">
                        <div class="title-icon">
                            <i class="fas fa-newspaper"></i>
                        </div>
                        <h2>Latest News</h2>
                    </div>
                    
                    <% if (latestNews && latestNews.length > 0) {%>
                        <% latestNews.forEach(function(news, index) {%>
                            <article class="news-article" data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
                                <h3><%= news.title %></h3>
                                <div class="article-meta">
                                    <span>by <%= news.author %></span> â€¢ <span><%= news.date ? new Date(news.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) : 'No date' %></span> â€¢ <span><%= news.category %></span>
                                </div>
                                <p><%= news.content.substring(0, 150) %>...</p>
                                <a href="javascript:void(0)" class="read-more" onclick="openNewsPopup(<%= index %>)">Read More â†’</a>
                            </article>
                        <% }) %>
                    <% } else {%>
                        <article class="news-article" data-aos="fade-up">
                            <h3>No News Available</h3>
                            <div class="article-meta">
                                <span>by ADMIN</span> â€¢ <span>Today</span> â€¢ <span>General</span>
                            </div>
                            <p>No news articles have been published yet. Please check back later for updates.</p>
                        </article>
                    <% } %>
                    
                    <div class="view-more-section">
                        <a href="/news" class="view-more-btn-home view-more-news">View More News</a>
                    </div>
                </div>

