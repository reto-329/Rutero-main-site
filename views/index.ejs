                            <div class="announcement-image">
                                <img src="<%= proprietor.image %>" alt="Proprietor Message">
                            </div>
                            <div class="announcement-content">
                                <h3><%= proprietor.title %></h3>
                                <div class="article-meta">
                                    <span>by <%= proprietor.author %></span> â€¢ <span><%= proprietor.date ? new Date(proprietor.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) : '' %></span>
                                </div>
                                <p><%= proprietor.content.substring(0, 150) %>...</p>
